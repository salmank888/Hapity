<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <ImageView
        android:id="@+id/broadcastItem"
        android:layout_width="fill_parent"
        android:layout_height="400px"
        android:padding="0dip"
        android:scaleType="fitXY"
        android:src="@drawable/broadcast_dummy" />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Best Resturent in Europe (By John Doe)"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:background="#99000000"
        android:alpha="0.3"
        />

    <LinearLayout
        android:id="@+id/broadcastItem_LL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:weightSum="5"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:background="#99000000"

        >


        <TextView
            android:drawableLeft="@drawable/like"
            android:id="@+id/likeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text=" Like"
            android:textSize="11sp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:drawableLeft="@drawable/dislike"
            android:id="@+id/dislikeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text=" Dislike"
            android:textSize="11sp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:drawableLeft="@drawable/comment"
            android:id="@+id/commentText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text=" Coment"
            android:textSize="11sp"
            />

        <TextView
            android:drawableLeft="@drawable/share"
            android:id="@+id/shareText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text=" Share"
            android:textSize="11sp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text="Offline"
            android:textSize="11sp"
            android:background="@drawable/offline"
            android:gravity="center"
            />
    </LinearLayout>

</FrameLayout>
